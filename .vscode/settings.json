{
    "cmake.configureOnOpen": false,
    "cmake.configureOnEdit": false,
    "cmake.buildDirectory": "${workspaceFolder}/cetlvast/build_vscode/build",
    "cmake.sourceDirectory": "${workspaceFolder}/cetlvast",
    "cmake.buildBeforeRun": true,
    "cmake.configureArgs": [
        "-DCETLVAST_EXT_FOLDER=${workspaceFolder}/cetlvast/build_vscode/ext",
        "--warn-uninitialized"
    ],
    "editor.wordWrapColumn": 120,
    "editor.rulers": [
        120
    ],
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "sonarlint.pathToCompileCommands": "${workspaceFolder}/cetlvast/build_vscode/build/compile_commands.json",
    "python.linting.mypyEnabled": true,
    "python.linting.enabled": true,
    "sonarlint.connectedMode.project": {
        "connectionId": "opencyphal",
        "projectKey": "OpenCyphal_CETL"
    },
    "testMate.cpp.test.executables": "${workspaceFolder}/cetlvast/build_vscode/build/cetlvast/suites/**/test_*",
    "sonarlint.analyzerProperties": {
        "sonar.cfamily.reportingCppStandardOverride": "c++14"
    },
    "cSpell.words": [
        "cetl",
        "cetlvast",
        "cyphal",
        "opencyphal",
        "cetlpf",
        "AUTOSAR",
        "tparam",
        "unsynchronized",
        "copydoc",
        "trimleft",
        "Pavel",
        "Kirienko",
        "gtest",
        "gmock",
        "DSDL",
        "rend",
        "rbegin"
    ]
}
