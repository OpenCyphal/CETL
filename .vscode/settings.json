{
    "cmake.configureOnOpen": false,
    "cmake.configureOnEdit": false,
    "cmake.sourceDirectory": "${workspaceFolder}/cetlvast",
    "cmake.buildBeforeRun": true,
    "C_Cpp.intelliSenseEngine": "disabled",
    "C_Cpp.autoAddFileAssociations": false,
    "editor.wordWrapColumn": 120,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "editor.rulers": [
        120
    ],
    "black-formatter.args": [
        "--line-length=120"
    ],
    "isort.args": [
        "--line-length=120"
    ],
    "pylint.args": [
        "--line-length=120"
    ],
    "testMate.cpp.test.advancedExecutables": [
        {
            "pattern": "${workspaceFolder}/cetlvast/build/suites/unittest/**/test_*"
        },
        {
            "pattern": "${workspaceFolder}/cetlvast/build/suites/docs/examples/**/example_*"
        },
        {
            "pattern": "${workspaceFolder}/cetlvast/build/suites/benchmark/**/benchmark_*"
        }
    ],
    "sonarlint.pathToCompileCommands": "${workspaceFolder}/cetlvast/build/compile_commands.json",
    "sonarlint.connectedMode.project": {
        "connectionId": "opencyphal",
        "projectKey": "OpenCyphal_CETL"
    },
    "sonarlint.analyzerProperties": {
        "sonar.cfamily.reportingCppStandardOverride": "c++14"
    },
    "cSpell.allowCompoundWords": true,
    "cSpell.caseSensitive": false,
    "cSpell.customDictionaries": {
        "cyphal" : {
            "name": "Cyphal-words",
            "path": "${workspaceRoot}/cyphal-words.txt",
            "description": "Words used in Cyphal and UAVCAN to add to spell checker dictionaries.",
            "addWords": false
          },
          "cetl" : {
            "name": "CETL-words",
            "path": "${workspaceRoot}/.vscode/words-cetl.txt",
            "description": "Words used in this, the CETL, project.",
            "addWords": true
          }
    },
    "files.associations": {
        "*.in": "cmake",
        "*.tcc": "cpp"
    }
}
